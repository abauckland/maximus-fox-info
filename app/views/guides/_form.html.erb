<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start-->
            <%= render :partial => "form_error", :locals => {:item => @guide} %>

<!-- form column start-->
            <div class="row">
                <%= form_for @guide do |f| %>
                    <fieldset>

                      <!-- form input[select] -->
                      <label class="label_100">Preamble:</label>
                      <span>
                          <%= f.select :preamble_id, options_for_select(Preamble.all.collect {|p| [ p.text.html_safe, p.id ]}), {:include_blank => true} %>
                      </span></br>

                      <!-- form input[textarea] -->
                      <label class="label_80">Guidance Text:</label>
                      <span>
                          <%= f.text_area :text, {:id=>"my-wymeditor" }%>
                      </span></br>

                      <!-- form input[select] -->
                      <label class="label_100">Postscript:</label>
                      <span>
                          <%= f.select :postscript_id, options_for_select(Postscript.all.collect {|p| [ p.text.html_safe, p.id ]}), {:include_blank => true} %>
                      </span></br>

                    </fieldset>
            </div>

<!-- column footer start-->
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", guides_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
